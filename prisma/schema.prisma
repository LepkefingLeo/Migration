generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
  previewFeatures = ["views"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Bike {
  id        Int     @id @default(autoincrement())
  name      String
  wheelSize Int
  electric  Boolean @default(false)
  gearCount Int @default(1)
}

view ElectricBikes {
  id Int
  name String
  wheelSize Int
  gearCount Int
}
